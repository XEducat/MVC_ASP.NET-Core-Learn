@model decimal
@{
    ViewData["Title"] = "Поповнення балансу";
    // var userDepositTitle = ViewBag?.SelectedDepositTitle;
    // var userDepositId = @ViewBag?.UserDepositId;
}

<div id="main" class="wrapper style1">
    <header class="major">
        <h2>Поповнення балансу</h2>
    </header>

    <form method="post" asp-action="AddToBalance" class="align-center">
        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]">
        <label for="amount">
            <h3>Сума поповнення</h3>
        </label>
        <input type="number" id="amount" name="amount" value="@Model" required><br>
        <button type="submit" class="button primary mt-4">Оформити</button>
    </form>
</div>
